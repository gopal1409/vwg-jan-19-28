#lets create our first deployment
 81  kubectl -n gopal create deployment -h
   82  kubectl create deployment my-first-deploy --image=nginx --port=80 -n gopal --dry-run=client -o yaml
   83  kubectl create deployment my-first-deploy --image=nginx --port=80 -n gopal --dry-run=client -o yaml > gopaldep.yml
   84  kubectl apply -f gopaldep.yml
   85  kubectl -n gopal get deploy
   86  kubectl -n gopal get pod
#replace the pod name with your name
   87  kubectl -n gopal delete pod my-first-deploy-688d64c99c-k42cb
   88  kubectl -n gopal get pod
#lets undestand deployment defination
#to apply any yaml file 
#kubectl apply -f dep.yml
#any yaml file will always run from top to boottom and left to write
apiVersion: apps/v1 #specifies which version of the API you are using to create this object
kind: Deployment #we are creating a deployment object
metadata: #this metadata section contains data that helps uniquely identify the object, including a name string, UID, and optional namespace
  creationTimestamp: null
  labels:
    app: my-first-deploy
  name: my-first-deploy #this is the name of the deployment
  namespace: gopal #in which namespace you want to create this deployment
spec: #this is the specification of the deployment
#in the specfication we have define how many replica of the app
  replicas: 1
  selector:
    matchLabels:
      app: my-first-deploy
  strategy: {}
  template: #inside your deployment how you are going create your container
    metadata:
      creationTimestamp: null
      labels: same label we will use to deploy our container
              app: my-first-deploy
    spec: #this is template specification
      containers: #the container defination
      - image: nginx
        name: nginx
        ports:
        - containerPort: 80
        resources: {}
status: {}
###lets scale our the pod 
36  kubectl -n gopal scale deploy my-first-deploy --replicas=4
   37  kubectl -n gopal get deploy
   38  kubectl get rs
#with the deployment your will see the rs whcih an hash value generated by k8s
   39  kubectl -n gopal get rs
#if you look into all the pod it is combination of dep+rshasvalue+uniquepodhashvalue
   40  kubectl -n gopal get pod
#lets expose the deployment and access it from outside k8s cluster
 46  kubectl -n gopal expose deploy my-first-deploy --type=NodePort --name=gopalsvc
#once expose 
   47  kubectl -n gopal get svc gopalsvc
#you will see the portnumber which is in 30000 series 

