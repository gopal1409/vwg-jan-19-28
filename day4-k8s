#lets create our first pod inside a namespace #please replace gopal with your name or the namespace you have created in earlier stages
58  kubectl run -h
   59  kubectl -n gopal run
   60  kubectl -n gopal run my-first-pod --image=nginx --dry-run=client -o yaml
   61  kubectl -n gopal run my-first-pod --image=nginx --dry-run=client -o yaml > gopal.yml
   62  kubectl apply -f gopal.yml
   63  kubectl get pod
   64  kubectl -n gopal get pod
   65  kubectl -n gopal describe pod
#if you want to login inside the pod 
69  kubectl -n gopal get pod
   70  kubectl -n gopal exec -it my-first-pod -- /bin/bash
