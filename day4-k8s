 51  kubectl get namespace
   52  kubectl create ns gopal
   53  kubectl get ns
#lets create our first pod inside a namespace #please replace gopal with your name or the namespace you have created in earlier stages
58  kubectl run -h
   59  kubectl -n gopal run
   60  kubectl -n gopal run my-first-pod --image=nginx --dry-run=client -o yaml
   61  kubectl -n gopal run my-first-pod --image=nginx --dry-run=client -o yaml > gopal.yml
   62  kubectl apply -f gopal.yml
   63  kubectl get pod
   64  kubectl -n gopal get pod
   65  kubectl -n gopal describe pod
#if you want to login inside the pod 
69  kubectl -n gopal get pod
   70  kubectl -n gopal exec -it my-first-pod -- /bin/bash
curl localhost
#to exit the container 
exit
####################if you delete the pod 
 73  kubectl -n gopal get pod
   74  kubectl -n gopal delete pod my-first-pod
   75  kubectl -n gopal get pod
#lets create our first deployment
 81  kubectl -n gopal create deployment -h
   82  kubectl create deployment my-first-deploy --image=nginx --port=80 -n gopal --dry-run=client -o yaml
   83  kubectl create deployment my-first-deploy --image=nginx --port=80 -n gopal --dry-run=client -o yaml > gopaldep.yml
   84  kubectl apply -f gopaldep.yml
   85  kubectl -n gopal get deploy
   86  kubectl -n gopal get pod
