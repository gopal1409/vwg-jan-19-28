#container vs process id
 98  docker run --name mongo -d mongo
   99  docker ps

#docker top will show the mongo db is running as a process id 
  102  docker top mongo
#is the linux native command which will show the container is running as process id in your linux system
  103  ps aux
  104  docker top mongo
#replace the process id with your own process id
  105  kill -9 6680
#now you can see the mongo db is not running
  106  docker ps
#this will show that mongo db is in stopped state
  107  docker ps -a
#you can start and stop a contianer using this below command
  108  docker start mongo
  109  docker ps
  110  docker stop mongo
  111  docker ps -a
#docker volume and path 
114  docker run -d --name db -e MYSQL_ALLOW_EMPTY_PASSWORD=true -v mysql-db:/var/lib/mysql mysql:8
  115  docker ps
#container inspect will give you more information about the container
  116  docker container inspect db
  117  docker volume ls
#this will show where is your volume is mapped

  119  docker volume inspect mysql-db
#this is the path where volume is mapped
  120  cd /var/lib/docker/volumes/mysql-db/_data
  121  ls
#lets login inside the cotnaienr -it is interactive terminal
  122  docker exec -it db  bash
##3once you login inside the container
mysql -u root -p 
